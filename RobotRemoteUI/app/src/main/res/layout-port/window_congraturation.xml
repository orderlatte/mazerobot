<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF000000"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/congraturation"
        android:layout_width="500dp"
        android:layout_height="125dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:src="@drawable/congraturation" />

        <ImageView
            android:layout_width="@dimen/name_icon_size"
            android:layout_height="@dimen/name_icon_size"
            android:layout_marginTop="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/chokyutae" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="@dimen/name_icon_size"
            android:layout_height="@dimen/name_icon_size"
            android:src="@drawable/kimhanseop" />

        <ImageView
            android:layout_width="@dimen/name_icon_size"
            android:layout_height="@dimen/name_icon_size"
            android:src="@drawable/kimminseok" />

        <ImageView
            android:layout_width="@dimen/name_icon_size"
            android:layout_height="@dimen/name_icon_size"
            android:src="@drawable/leejungjae" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/name_icon_size"
        android:layout_height="@dimen/name_icon_size"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/parksangjoo" />

</LinearLayout>