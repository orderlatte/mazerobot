<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/camera_display_size"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/wall_sign_counter"
        android:layout_width="@dimen/sign_icon_size"
        android:layout_height="@dimen/sign_icon_size"
        android:layout_marginRight="10dp"
        android:background="@drawable/wall_sign_red_dot"
        android:gravity="center"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/wall_signs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

</LinearLayout>